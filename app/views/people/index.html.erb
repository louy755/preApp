<button type="button" class="btn btn-success btn-lg btn-block"><h2>All Invoices Table  </h2></button>

<center>
  <div class="container"><br>
    <table id="per" class="table table-striped table-bordered" style="width: 80%;">
      <thead class="table-success">
        <tr>
          <th>Name</th>
          <th>Phone</th>
          <th>Date</th>
          <% if current_user  && current_user.admin? %>
            <th>Action</th>
            <th>Action</th>
            <th>Action</th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% @people.each do |person| %>
          <tr>
            <td><%= link_to person.name.titleize, person %></td>
            <td><%= person.phone %></td>
            <td><%= person.created_at.strftime("%m/%d/%Y")%></td>
            <% if current_user  && current_user.admin? %>
              <td><%= link_to 'Show', person %></td>
              <td><%= link_to 'Edit', edit_person_path(person) %></td>
              <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</center>

<br>
<%= link_to ' Create New Invoice Click Here Please!', new_person_path, :class => "btn btn-outline-danger btn-lg btn-block"%>
